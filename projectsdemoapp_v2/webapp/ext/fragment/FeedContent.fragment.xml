<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	<VBox id="vBox1">
		<FeedInput
			id="feedInputID"
			class="sapUiSmallMarginTopBottom"
			core:require="{ handler: 'projectsdemoappv2/projectsdemoappv2/ext/fragment/FeedContent'}"
			post="handler.onPost"
			growing="true" />
		<List 
			id="feedsList"
			noDataText="No Comments Found"
			showSeparators="Inner"
			growing="true"
			items="{ path: '_Feeds',
				 	 parameters: { expand: 'Feeds' },
					 sorter: { path: 'LastChangedAt' } }" >
			<FeedListItem 
				id="feedListItemID"
				sender="{Sender}"
				core:require="{ handler: 'projectsdemoappv2/projectsdemoappv2/ext/fragment/FeedContent'}"
				senderPress="handler.onPress"
				iconPress="handler.onPress"
				iconDensityAware="false"
				timestamp="{LastChangedAt}"
				text="{Content}"
				convertLinksToAnchorTags="All" >
				<actions>
					<FeedListItemAction 
						id="feedListDeleteID" 
						text="Delete"
						icon="sap-icon://delete"
						core:require="{ handler: 'projectsdemoappv2/projectsdemoappv2/ext/fragment/FeedContent'}"
						press="handler.onPressDelete" />
				</actions>
				
			</FeedListItem>
		</List>
	</VBox>
</core:FragmentDefinition>