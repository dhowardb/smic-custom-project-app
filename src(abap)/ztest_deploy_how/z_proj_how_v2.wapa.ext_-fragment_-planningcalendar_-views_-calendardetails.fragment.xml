<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core">                                                                                                                                                               
    <ResponsivePopover                                                                                                                                                                                                                                         
        title="{ProjectName}"                                                                                                                                                                                                                                  
        class="sapUiResponsivePadding--header"                                                                                                                                                                                                                 
        placement="Auto"                                                                                                                                                                                                                                       
        core:require="{ handler: 'projectsdemoappv2/projectsdemoappv2/ext/fragment/PlanningCalendar/handler/CalendarDetailsHandler' }">                                                                                                                        
                                                                                                                                                                                                                                                               
        <beginButton>                                                                                                                                                                                                                                          
            <Button                                                                                                                                                                                                                                            
                text="Edit"                                                                                                                                                                                                                                    
                type="Emphasized"                                                                                                                                                                                                                              
                press="handler.handleEditPopOver"/>                                                                                                                                                                                                            
        </beginButton>&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                                                 
        <endButton>                                                                                                                                                                                                                                            
            <Button                                                                                                                                                                                                                                            
                text="Delete"                                                                                                                                                                                                                                  
                type="Negative"                                                                                                                                                                                                                                
                press="handler.handleDeleteProject"/>                                                                                                                                                                                                          
        </endButton>                                                                                                                                                                                                                                           
        <form:SimpleForm&nbsp;                                                                                                                                                                                                                                 
            editable="false"                                                                                                                                                                                                                                   
            layout="ResponsiveGridLayout"                                                                                                                                                                                                                      
            singleContainerFullSize="false" >                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
            <Label                                                                                                                                                                                                                                             
                text="Additional Information"                                                                                                                                                                                                                  
                labelFor="moreInfo"/>                                                                                                                                                                                                                          
            <Text&nbsp;                                                                                                                                                                                                                                        
                text="{ProjectName}"/>                                                                                                                                                                                                                         
            <Label                                                                                                                                                                                                                                             
                text="From"                                                                                                                                                                                                                                    
                labelFor="startDate"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                         
            <Text&nbsp;                                                                                                                                                                                                                                        
                text="{StartDate}"/>                                                                                                                                                                                                                           
            <Label&nbsp;                                                                                                                                                                                                                                       
                text="To"                                                                                                                                                                                                                                      
                labelFor="endDate"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                           
            <Text&nbsp;                                                                                                                                                                                                                                        
                text="{ProjectedDate}"/>                                                                                                                                                                                                                       
        </form:SimpleForm>                                                                                                                                                                                                                                     
    </ResponsivePopover>                                                                                                                                                                                                                                       
</core:FragmentDefinition>                                                                                                                                                                                                                                     